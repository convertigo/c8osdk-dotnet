<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBigFileTransfer.Login">
  <ScrollView Orientation="Vertical">
    <StackLayout Orientation="Vertical" Spacing="5">
      <Label Text="Login" XAlign="Center" FontAttributes="Bold" FontSize="22"/>
      <StackLayout Orientation="Horizontal" Spacing="5">
        <Label Text="Username"/>
        <Entry x:Name="UsernameField" Text="Jim" HorizontalOptions="FillAndExpand"/>
      </StackLayout>
      <StackLayout Orientation="Horizontal" Spacing="5">
        <Label Text="Password"/>
        <Entry IsPassword="True" x:Name="PasswordField" Text="Jim" HorizontalOptions="FillAndExpand"/>
      </StackLayout>
      <Button x:Name="LoginButton" Text="Login" Clicked="LoginButtonClick"/>
    </StackLayout>
  </ScrollView>
</ContentPage>